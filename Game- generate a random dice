#python code to generate a random dice
#random is imported to create a random Value
#Time is imported for delay
import random
import time
#Minimum and maximum value of the dice
min = 1
max = 6

roll_again = "yes"

while roll_again == "yes" or roll_again == "y":
    print ("Rolling the dices...")
    #delay of 2 seconds
    time.sleep(2)
    print("..............")
    #delay of 1 second
    time.sleep(1)
    print ("The values are....")
    
    #output for 2 dices
    
    print (random.randint(min, max))
    print (random.randint(min, max))

    roll_again = input("Roll the dices again?\n")
