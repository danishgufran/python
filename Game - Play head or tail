#python code to plat head or Tail
#def implemented to play the game
def flagg():
 while True:
    if(flag==1):
     flip=random.randint(1,2)
     #select head ot tail at random
     if(flip==1):
       coin='head'
     elif(flip==2):
       coin='tail'
    toss=input('What do you choose Head or Tail?\n')
    if(toss=='head'):
     if(coin==toss):
       print('YOU WON THE COIN LANDED AS HEAD')
       break
     else:
       print('YOU LOSE! \n The coin landed as tail')
       break 
    elif(toss=='tail'):
     if(coin==toss):
       print('YOU WON THE COIN LANDED AS HEAD')
       break
     else:
       print('YOU LOSE! \n The coin landed as tail')
       break
    else:
     print('INVALID')
    if(flag==0):
      break
print('\tCOIN FLIP GAME')
